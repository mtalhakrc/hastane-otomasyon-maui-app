<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hastane_otomasyon_maui_app.Pages.ProfilePage"
             Title="Profile Page">
    <VerticalStackLayout Padding="25"
                         Spacing="25">
        
        
        
        <Label Text="Şifreyi değiştir" />
        <Label Text="Password" />
        <Entry Text="{Binding Password}" IsPassword="True" Margin="0,0,0,5"></Entry>
        <Button Text="Login" Command="{Binding LoginCommand}" CornerRadius="0"></Button>
        
        
        <Button Text="Logout"/>
    </VerticalStackLayout>
</ContentPage>